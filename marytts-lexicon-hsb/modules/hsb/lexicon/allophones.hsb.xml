<allophones name="sampa" xml:lang="hsb"
  features="vlng vheight vfront vrnd ctype cplace cvox">
  <silence ph="_" ipa=""/>
  <!-- test comment-->
  <!--<syllable_break ph="§" ipa="."/> nicht notwendig, vordef. als "-" -->
  <primary_stress ph="'" ipa="ˈ"/> <!-- funktioniert-->
  <!-- <secondary_stress ph="§" ipa="ˌ"/> ist in MaryTTS nicht vorgesehen -> weg -->
  <!--Wo ist der genaue Zusammenhang zwischen Rechtschreibung und Lauten bei MaryTTS?-->
  <vowel ph="a" ipa="a" vlng="s" vheight="3" vfront="2" vrnd="-"/>
  <vowel ph="a:" ipa="aː" vlng="l" vheight="3" vfront="2" vrnd="-"/> <!-- deutscher Langvokal -->
  <vowel ph="E" ipa="ɛ" vlng="s" vheight="2" vfront="1" vrnd="-"/>
  <vowel ph="I" ipa="ɪ" vlng="s" vheight="1" vfront="1" vrnd="-"/>
  <vowel ph="Y" ipa="ʏ" vlng="s" vheight="1" vfront="1" vrnd="+"/>
  <vowel ph="i" ipa="i" vlng="s" vheight="1" vfront="1" vrnd="-"/>
  <vowel ph="i:" ipa="iː" vlng="l" vheight="1" vfront="1" vrnd="-"/> <!-- deutscher Langvokal -->
  <vowel ph="1" ipa="ɨ" vlang="s" vheight="1" vfront="2" vrnd="-"/>
  <vowel ph="O" ipa="ɔ" vlng="s" vheight="2" vfront="3" vrnd="+"/>
  <vowel ph="O:" ipa="ɔː" vlng="l" vheight="2" vfront="3" vrnd="+"/>
  <vowel ph="o" ipa="o" vlng="s" vheight="2" vfront="3" vrnd="+"/>
  <vowel ph="o:" ipa="oː" vlng="l" vheight="2" vfront="3" vrnd="-"/>  <!-- deutscher Langvokal-->
  <vowel ph="U" ipa="ʊ" vlng="s" vheight="1" vfront="3" vrnd="+"/>
  <vowel ph="@" ipa="ə" vlng="s" vheight="2" vfront="2" vrnd="-"/>
  <vowel ph="e" ipa="e" vlng="s" vheight="2" vfront="1" vrnd="-"/>
  <vowel ph="2" ipa="ø" vlng="s" vheight="2" vfront="1" vrnd="+"/>
  <vowel ph="2:" ipa="øː" vlng="l" vheight="2" vfront="1" vrnd="+"/>
  <vowel ph="e:" ipa="eː" vlng="l" vheight="2" vfront="1" vrnd="-"/> <!-- deutscher Langvokal -->
  <vowel ph="e*^" ipa="e̯" vlng="s" vheight="2" vfront="1" vrnd="-"/> <!--Allophon von j, nach Labialen und vor ɛ-->
  <vowel ph="u" ipa="u" vlng="s" vheight="1" vfront="3" vrnd="+"/>
  <vowel ph="u:" ipa="uː" vlng="l" vheight="1" vfront="3" vrnd="-"/> <!-- deutscher Langvokal -->
  <vowel ph="}" ipa="ʉ" vlng="s" vheight="1" vfront="2" vrnd="+"/>
  <vowel ph="3/*+" ipa="ɘ̟" vlng="s" vheight="2" vfront="2" vrnd="-"/>
  <vowel ph="6" ipa="ɐ" vlng="a" vheight="3" vfront="2" vrnd="-" ctype="r"/>
  <vowel ph="y" ipa="y" vlng="s" vjeight="1" vfront="1" vrnd="+"/>	<!-- deutscher Kurzvokal ü-->
  <vowel ph="y:" ipa="yː" vlng="l" vjeight="1" vfront="1" vrnd="+"/>	<!-- deutscher Langvokal ü-->
  <vowel ph="E:" ipa="ɛː" vlng="l" vjeight="1" vfront="1" vrnd="-"/>	<!-- deutscher Langvokal ä-->
  <vowel ph="9" ipa="œ" vlng="s" vjeight="1" vfront="1" vrnd="+"/>	<!-- deutscher Kurzvokal ö-->
  <vowel ph="9:" ipa="œː" vlng="l" vjeight="1" vfront="1" vrnd="+"/>	<!-- deutscher Langvokal ö-->
  <!--Quantität? iː, uː, aː; ɛː eː oː? Unterschied zw. D und SB Wörtern?
  #kurzes deutsches i und u unterscheiden von sorbischem ě und ó
  #gerundete Vokale
  #th stimmhaft und stimmlos dazunehmen für englisch? ɹ?
  #wie behandelt das deutsche Syntheseprogramm solche Fremd-Allophone?-->
  <vowel ph="aI" ipa="aj" vlng="d" vheight="3" vfront="1" vrnd="-"/>
  <vowel ph="OY" ipa="ɔj" vlng="d" vheight="2" vfront="3" vrnd="+"/>
  <vowel ph="aU" ipa="aw" vlng="d" vheight="3" vfront="2" vrnd="+"/>
  <vowel ph="EI" ipa="ɛj" vlng="d" vheight="2" vfront="1" vrnd="-"/>
  <!--oder lieber morpholoɡische Grenzen markieren? mit Script automatisch je nach Position? Ziel: ingesamt weniger Aufwand-->
  <consonant ph="p" ipa="p" ctype="s" cplace="l" cvox="-"/>
  <consonant ph="t" ipa="t" ctype="s" cplace="a" cvox="-"/>
  <consonant ph="k" ipa="k" ctype="s" cplace="v" cvox="-"/>
  <consonant ph="pH" ipa="pʰ" ctype="s" cplace="l" cvox="-"/>
  <consonant ph="tH" ipa="tʰ" ctype="s" cplace="a" cvox="-"/>
  <consonant ph="kH" ipa="kʰ" ctype="s" cplace="v" cvox="-"/>
  <consonant ph="pHH" ipa="pʰʰ" ctype="s" cplace="l" cvox="-"/>
  <consonant ph="tHH" ipa="tʰʰ" ctype="s" cplace="a" cvox="-"/>
  <consonant ph="kHH" ipa="kʰʰ" ctype="s" cplace="v" cvox="-"/>
  <consonant ph="b" ipa="b" ctype="s" cplace="l" cvox="+"/>
  <consonant ph="d" ipa="d" ctype="s" cplace="a" cvox="+"/>
  <consonant ph="g" ipa="ɡ" ctype="s" cplace="v" cvox="+"/>
  
  <consonant ph="f" ipa="f" ctype="f" cplace="b" cvox="-"/>
  <consonant ph="v" ipa="v" ctype="f" cplace="b" cvox="+"/>
  <consonant ph="s" ipa="s" ctype="f" cplace="a" cvox="-"/>
  <consonant ph="z" ipa="z" ctype="f" cplace="a" cvox="+"/>
  <consonant ph="S" ipa="ʃ" ctype="f" cplace="p" cvox="-"/>
  <consonant ph="Z" ipa="ʒ" ctype="f" cplace="p" cvox="+"/>
  <consonant ph="x" ipa="x" ctype="f" cplace="u" cvox="-"/>
  <consonant ph="C" ipa="ç" ctype="f" cplace="p" cvox="-"/>
  <consonant ph="h" ipa="h" ctype="f" cplace="g" cvox="-"/>
<!-- <consonant ph="h" ipa="h" ctype="f" cplace="g" cvox="+"/> stimmhafte Variante? oder mit Regeln bestimmen-->

  <consonant ph="ts" ipa="ts" ctype="a" cplace="a" cvox="-"/>
  <consonant ph="dz" ipa="dz" ctype="a" cplace="a" cvox="+"/>
  <consonant ph="tS" ipa="tʃ" ctype="a" cplace="p" cvox="-"/>
  <consonant ph="dZ" ipa="dʒ" ctype="a" cplace="p" cvox="+"/>

  <consonant ph="l" ipa="l" ctype="l" cplace="a" cvox="+"/>
  <consonant ph="m" ipa="m" ctype="n" cplace="l" cvox="+"/>
  <consonant ph="n" ipa="n" ctype="n" cplace="a" cvox="+"/>
  <consonant ph="N" ipa="ŋ" ctype="n" cplace="v" cvox="+"/>
  <consonant ph="w" ipa="w" ctype="r" cplace="l" cvox="+"/>
  <consonant ph="j" ipa="j" ctype="r" cplace="p" cvox="+"/>
  <consonant ph="R" ipa="ʁ" ctype="l" cplace="u" cvox="+"/>
  
  <consonant ph="?" ipa="ʔ" ctype="s" cplace="g" cvox="-"/>
  
  <consonant ph="l*j" ipa="lʲ" ctype="l" cplace="a" cvox="+"/> <!-- kann evtl auch ausgelassen werden, müsste man testen-->
  <consonant ph="n*j" ipa="nʲ" ctype="a" cplace="a" cvox="+"/> <!-- Sonderfall-->
  <consonant ph="m*j" ipa="mʲ" ctype="a" cplace="a" cvox="+"/>
  <consonant ph="b*j" ipa="bʲ" ctype="a" cplace="a" cvox="+"/>
  <consonant ph="p*j" ipa="pʲ" ctype="a" cplace="a" cvox="+"/>
  <consonant ph="w*j" ipa="wʲ" ctype="r" cplace="l" cvox="+"/>
  <consonant ph="R*j" ipa="ʁʲ" ctype="l" cplace="u" cvox="+"/>
  <consonant ph="k*j" ipa="kʲ" ctype="s" cplace="v" cvox="-"/>
  <consonant ph="g*j" ipa="ɡʲ" ctype="s" cplace="v" cvox="+"/> <!-- ? -->
  <consonant ph="kH*j" ipa="kʰʲ" ctype="s" cplace="v" cvox="-"/>
  <consonant ph="x*j" ipa="xʲ" ctype="f" cplace="u" cvox="-"/>
 <!-- silbenbildende Konsonanten, l n m -->
 <consonant ph="l;" ipa="̩l̩" ctype="l" cplace="a" cvox="+"/>
 <consonant ph="n;" ipa="n̩" ctype="n" cplace="a" cvox="+"/>
 <consonant ph="m;" ipa="m̩" ctype="n" cplace="a" cvox="+"/>
